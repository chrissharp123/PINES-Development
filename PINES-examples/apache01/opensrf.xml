<opensrf version='0.0.3'>

    <default>

        <default_locale>en-US</default_locale>

        <dirs>
            <log>/var/run/evergreen</log>
            <sock>/var/run/evergreen</sock>
            <pid>/var/run/evergreen</pid>
            <xsl>/openils/var/xsl</xsl>
            <script>/openils/var</script>
            <script_lib>/openils/var</script_lib>
        </dirs>

        <share><user><opt_in>false</opt_in></user></share>

        <IDL>/openils/conf/fm_IDL.xml</IDL>
        <server_type>prefork</server_type>
        <ils_events>/openils/var/data/ils_events.xml</ils_events>

        <email_notify>
            <template>/openils/var/data/hold_notification_template</template>
            <smtp_server>pettigrew.georgialibraries.org</smtp_server>
            <sender_address>evergreen@georgialibraries.org</sender_address>
        </email_notify>

        <notifications>
            <smtp_server>pettigrew.georgialibraries.org</smtp_server>
            <sender_address>evergreen@georgialibraries.org</sender_address>
            <overdue>
                <notice_dir>/openils/var/data/overdue</notice_dir>
                <combined_template>/openils/var/data/templates/overdue_combined_xml</combined_template>
<!-- 7 and 14 day notices were replaced with 10 day notices, per ESI-HDT2874
                <notice>
                    <notify_interval>7 days</notify_interval>
                    <file_append>noemail</file_append>
                    <email_notify>true</email_notify>
                    <email_template>/openils/var/data/templates/overdue_7day</email_template>
                </notice>
                <notice>
                    <notify_interval>14 days</notify_interval>
                    <file_append>noemail</file_append>
                    <email_notify>true</email_notify>
                    <email_template>/openils/var/data/templates/overdue_14day</email_template>
                </notice>
-->
                <notice>
                    <notify_interval>10 days</notify_interval>
                    <file_append>noemail</file_append>
                    <email_notify>true</email_notify>
                    <email_template>/openils/var/data/templates/overdue_10day</email_template>
                </notice>
                <notice>
                    <notify_interval>28 days</notify_interval>
                    <file_append>always</file_append>
                    <email_notify>true</email_notify>
                    <email_template>/openils/var/data/templates/overdue_28day</email_template>
                </notice>
            </overdue>
            <predue>
                <notice_dir>/openils/var/data/predue</notice_dir>
                <notice>
                    <circ_duration_range>
                        <from>8 days</from>
                        <to>100 days</to>
                    </circ_duration_range>
                    <notify_interval>2 days</notify_interval>
                    <file_append>false</file_append>
                    <email_notify>true</email_notify>
                    <email_template>/openils/var/data/templates/predue_2day</email_template>
                </notice>
                <notice>
                    <circ_duration_range>
                        <from>2 days</from>
                        <to>7 days</to>
                    </circ_duration_range>
                    <notify_interval>1 days</notify_interval>
                    <file_append>false</file_append>
                    <email_notify>true</email_notify>
                    <email_template>/openils/var/data/templates/predue_1day</email_template>
                </notice>
            </predue>
        </notifications>

